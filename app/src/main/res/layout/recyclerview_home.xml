<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_home"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        android:largeHeap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/home_text_post"
        android:layout_width="310dp"
        android:layout_height="145dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/profile_image_home"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_home"
        android:layout_width="243dp"
        android:layout_height="23dp"
        android:layout_marginStart="12dp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/profile_image_home"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_home"
        android:layout_width="243dp"
        android:layout_height="23dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/profile_image_home"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_upward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_text_post" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_downward"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/home_text_post" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/message"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/home_text_post" />

</androidx.constraintlayout.widget.ConstraintLayout>
